<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>infinityCableServiceMgmt</display-name>
  
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.infinityCableService.controller.UserControllerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PackagesController</servlet-name>
    <servlet-class>com.infinityCableService.controller.PackagesControllerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CustomerController</servlet-name>
    <servlet-class>com.infinityCableService.controller.CustomerControllerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/UserControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PackagesController</servlet-name>
    <url-pattern>/PackagesControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CustomerController</servlet-name>
    <url-pattern>/CustomerControllerServlet</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>